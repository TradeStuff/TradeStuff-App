

-#  This file is app/views/movies/index.html.haml
%h1 All Users

/= form_tag alll_path do

%table#users
  %thead
    %tr
      %th ID
      %th Name
      %th Last Name
      %th Email
      %th Phone
      %th Address
      %th City
      %th State
      %th Zip
      %th Country
      %th Trading
  %tbody
    - @userinfos.each do |user|
      %tr
        %td= user.uid 
        %td= user.fname
        %td= user.lname
        %td= user.email
        %td= user.phone
        %td= user.address
        %td= user.city
        %td= user.state
        %td= user.zip
        %td= user.country
        %td= link_to "More about #{user.uid}", root_path

        

%p
  = link_to 'Accounts', home_users_account_path 
  = link_to 'Home', root_path

  